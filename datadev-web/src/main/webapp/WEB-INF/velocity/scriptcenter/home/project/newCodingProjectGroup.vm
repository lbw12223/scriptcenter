#set($layout="layout_blank.vm")
#set($page_title="newCodingProjectGroup")
<link rel="stylesheet" href="/scriptcenter/statics/pages/home/project/newCodingProjectGroup.css?_dc=$!{staticVersion}" type="text/css">
<div id="codingProjectGroupArt">
    <form id="codingGroupForm">
        <div class="group-path-content bdp-form-group">
            <label class="bdp-control-label"><i class="bdp-note">*</i>组路径：</label>
            <div class="project-item">
                <span class="project-url-span">http://coding.jd.com/</span>
                <input class="bdp-form-control gitGroupPath" id="codingGroupPathInput"  name="codingGroupPath" placeholder="请输入组路径，支持字母、数字、下划线、中线" autocomplete="off">
            </div>
        </div>
        <div class="group-member-content bdp-form-group">
            <label class="bdp-control-label">组成员：</label>
            <div class="project-item">
                <input class="bdp-form-control gitGroupMember" id="codingGroupMember"  name="codingGroupMember" placeholder="" autocomplete="off">
            </div>
        </div>
        <div class="project-desc-content bdp-form-group">
            <div class="tips">提示：将把登录用户默认加入组成员</div>
        </div>
        <div class="group-desc-content bdp-form-group">
            <label class="bdp-control-label"><i class="bdp-note">*</i>组描述：</label>
            <div class="project-item">
                        <textarea class="bdp-form-control"id="codingGroupDescText" name="codingGroupDesc" placeholder="请输入描述" autocomplete="off"
                                  style="width: 100%"></textarea>
            </div>
        </div>

    </form>
    <div class="buttons-div">
        <a class="bdp-btn bdp-btn-primary" id="addCodingGroupBtn">创建组</a>
        <a class="bdp-btn bdp-btn-default" id="closeGroupBtn">关闭</a>
    </div>
</div>
<script src="/scriptcenter/statics/art/js/jquery.artDialog.js?_dc=$!{staticVersion}"></script>
<script src="/scriptcenter/statics/art/plugins/iframeTools.js?_dc=$!{staticVersion}"></script>
<script src="/scriptcenter/statics/pages/home/project/newCodingProjectGroup.js?_dc=$!{staticVersion}"></script>
<script src="/scriptcenter/statics/pages/user.js?_dc=$!{staticVersion}"></script>
