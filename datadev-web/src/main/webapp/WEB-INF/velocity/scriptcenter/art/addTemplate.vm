#set($layout="layout_blank.vm")

<link rel="stylesheet" href="/scriptcenter/statics/pages/home/project/newGitProject.css?_dc=$!{staticVersion}" type="text/css">
#*<input type="hidden" id="gitProjectId" value="${gitProjectId}"/>*#
<div id="gitProjectArt">

    <form id="gitProForm">

        <div style="width: 100%" class="project-name-content bdp-form-group">
            <label class="bdp-control-label"><i class="bdp-note">*</i>模板名称：</label>
            <input class="bdp-form-control" id="templateName" autocomplete="off" style="width: 420px;">
        </div>

        <div style="width: 100%" class="project-name-content bdp-form-group">
            <label class="bdp-control-label"><i class="bdp-note">*</i>脚本类型：</label>

                <select id="scriptType" style="width: 420px;">
                    <option value="1">SQL</option>
                    <option value="2">Shell</option>
                    <option value="3">Python2</option>
                    <option value="4">Python3</option>
                </select>
        </div>

        <div style="width: 100%" class="project-name-content bdp-form-group">
            <label class="bdp-control-label"><i class="bdp-note">*</i>脚本描述：</label>
            <textarea id="desc" style="width: 420px; height:300px;"></textarea>
        </div>

    </form>
    <div class="buttons-div">
        <a class="bdp-btn bdp-btn-primary" id="addTemplateBtn">添加模板</a>
        <a class="bdp-btn bdp-btn-default" id="closeTemplateBtn">关闭</a>
    </div>
</div>

#define($javascriptBlock)
<script src="/scriptcenter/statics/art/js/jquery.artDialog.js?_dc=$!{staticVersion}"></script>
<script src="/scriptcenter/statics/art/plugins/iframeTools.js?_dc=$!{staticVersion}"></script>
<script src="/scriptcenter/statics/pages/home/addTemplate.js?_dc=$!{staticVersion}"></script>

#end
